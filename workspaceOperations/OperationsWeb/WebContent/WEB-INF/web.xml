<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>OperationsWeb</display-name>
	<!-- <display-name>SaboiaTest</display-name> --> <!-- HOMOL -->
	<!-- <display-name>SaboiaDev</display-name> --> <!-- TST -->
	<!-- <display-name>Saboia</display-name> --> <!-- PROD -->

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<!-- Para não exibir os comentários html na renderização do browser -->
	<context-param>
		<param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
		<param-value>true</param-value>
	</context-param>

	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>delta</param-value>
	</context-param>

	<context-param>
		<param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
		<param-value>true</param-value>
	</context-param>

	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>/faces/*</url-pattern>
	</servlet-mapping>

	<filter> 
		<filter-name>Login Filter</filter-name> 
		<filter-class>br.com.saboia.filter.LoginFilter</filter-class> 
	</filter> 
	
	<filter-mapping> 
		<filter-name>Login Filter</filter-name> 
		<url-pattern>/faces/*</url-pattern> 
	</filter-mapping>

</web-app>